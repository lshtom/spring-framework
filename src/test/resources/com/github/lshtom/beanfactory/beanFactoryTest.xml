<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:myname="http://www.lexueba.com/schema/user"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
							http://www.lexueba.com/schema/user http://www.lexueba.com/schema/user.xsd"
		profile="dev">

	<!--<bean id="myTestBean" class="com.github.lshtom.beanfactory.bean.MyTestBean"/>-->
	<bean id="myTestBean" class="com.github.lshtom.beanfactory.bean.MyTestBean"/>

	<!--depends-on属性的意义是：当前对象的实例化要依赖于depends-on属性中所指定的Bean，只有指定的Bean实例化了，该对象才会实例化-->
	<bean class="com.github.lshtom.beanfactory.bean.MyTestBean2" lazy-init="default" autowire="byType" depends-on="myTestBean">
		<property name="bean" ref="myTestBean3"/>
	</bean>

	<bean id="myTestBean3" class="com.github.lshtom.beanfactory.bean.MyTestBean3" autowire-candidate="false"/>

	<!--外部Bean与内部Bean定义-->
	<bean id="person" class="com.github.lshtom.beanfactory.bean.outer_innter.Person">
		<property name="name" value="小明"/>
		<property name="age" value="23"/>
		<property name="phoneNumber" value="18700761234"/>
		<property name="address">
			<bean class="com.github.lshtom.beanfactory.bean.outer_innter.Address">
				<property name="country" value="中国"/>
				<property name="province" value="广东"/>
				<property name="city" value="佛山"/>
				<property name="detail" value="北滘镇大垌村23号"/>
			</bean>
		</property>
	</bean>

