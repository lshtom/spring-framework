	<!--lookup-method标签的使用-->
	<bean id="getBeanTest" class="com.github.lshtom.beanfactory.bean.lookup_method.GetBeanTest">
		<lookup-method name="userBean" bean="student"/>
	</bean>
	<bean id="user" class="com.github.lshtom.beanfactory.bean.lookup_method.User"/>
	<bean id="teacher" class="com.github.lshtom.beanfactory.bean.lookup_method.Teacher"/>
	<bean id="student" class="com.github.lshtom.beanfactory.bean.lookup_method.Student"/>

	<!--replaced-method标签的使用-->
	<bean id="testChangeMethod" class="com.github.lshtom.beanfactory.bean.replaced_method.TestChangeMethod">
		<replaced-method name="changeMe" replacer="testMethodReplacer">
			<!--<arg-type match=""/>-->
		</replaced-method>
	</bean>
	<bean id="testMethodReplacer" class="com.github.lshtom.beanfactory.bean.replaced_method.TestMethodReplacer"/>

	<!--constructor-arg标签使用说明-->
	<bean id="fruit" name="fruit1,fruit2,fruit3" class="com.github.lshtom.beanfactory.bean.constructor_arg.Fruit">
		<constructor-arg type="java.lang.String">
			<value>苹果</value>
		</constructor-arg>
		<constructor-arg type="java.lang.String">
			<value>广西</value>
		</constructor-arg>
		<constructor-arg  type="java.lang.Double">
			<value>23.6</value>
		</constructor-arg>
	</bean>

	<!--alias标签使用说明-->
	<alias name="fruit" alias="orange,apple"/>

	<!--测试自定义标签-->
	<myname:user id="testCustomTag" userName="aaa" email="bbb@ccc.com"/>
</beans>